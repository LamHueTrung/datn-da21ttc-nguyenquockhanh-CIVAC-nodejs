  <!-- Filter and Sort Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const ageFilter = document.getElementById('age-filter');
      const diseaseFilter = document.getElementById('disease-filter');
      const sortFilter = document.getElementById('sort-filter');
      const tableRows = document.querySelectorAll('#vaccine-table tbody tr');
      const cardsContainer = document.getElementById('vaccine-cards');

      // Generate mobile cards
      function generateCards() {
        cardsContainer.innerHTML = '';
        tableRows.forEach(row => {
          const cells = row.querySelectorAll('td');
          const card = document.createElement('div');
          card.className = 'col-12 vaccine-card';
          card.dataset.age = row.dataset.age;
          card.dataset.disease = row.dataset.disease;
          card.innerHTML = `
            <p><strong>STT:</strong> ${cells[0].textContent}</p>
            <p><strong>Phòng bệnh:</strong> ${cells[1].textContent}</p>
            <p><strong>Tên vắc-xin:</strong> ${cells[2].textContent}</p>
            <p><strong>Nước sản xuất:</strong> ${cells[3].textContent}</p>
            <p><strong>Giá bán lẻ:</strong> ${cells[4].textContent} VNĐ</p>
            <p><strong>Giá ưu đãi:</strong> ${cells[5].textContent || '-'} VNĐ</p>
            <p><strong>Tình trạng:</strong> ${cells[6].textContent}</p>
            ${cells[7].innerHTML}
          `;
          cardsContainer.appendChild(card);
        });
      }

      generateCards();

      function filterAndSortTable() {
        const ageValue = ageFilter.value;
        const diseaseValue = diseaseFilter.value;
        const sortValue = sortFilter.value;

        let rowsArray = Array.from(tableRows);
        let cardsArray = Array.from(cardsContainer.children);

        // Filter
        rowsArray.forEach((row, index) => {
          const ageMatch = ageValue === 'all' || row.dataset.age === ageValue;
          const diseaseMatch = diseaseValue === 'all' || row.dataset.disease === diseaseValue;
          const display = ageMatch && diseaseMatch ? '' : 'none';
          row.style.display = display;
          cardsArray[index].style.display = display;
        });

        // Sort
        if (sortValue !== 'none') {
          rowsArray = rowsArray.filter(row => row.style.display !== 'none');
          rowsArray.sort((a, b) => {
            const aPrice = parseFloat(a.cells[4].textContent.replace(/[^0-9]/g, '')) || 0;
            const bPrice = parseFloat(b.cells[4].textContent.replace(/[^0-9]/g, '')) || 0;
            const aDiscount = parseFloat(a.cells[5].textContent.replace(/[^0-9]/g, '')) || aPrice;
            const bDiscount = parseFloat(b.cells[5].textContent.replace(/[^0-9]/g, '')) || bPrice;
            const aNew = a.cells[6].textContent.includes('*') ? 1 : 0;
            const bNew = b.cells[6].textContent.includes('*') ? 1 : 0;

            if (sortValue === 'price-asc') return aPrice - bPrice;
            if (sortValue === 'price-desc') return bPrice - aPrice;
            if (sortValue === 'discount') return (bPrice - bDiscount) - (aPrice - aDiscount);
            if (sortValue === 'newest') return bNew - aNew;
            return 0;
          });

          // Reorder table and cards
          const tbody = document.querySelector('#vaccine-table tbody');
          tbody.innerHTML = '';
          cardsContainer.innerHTML = '';
          rowsArray.forEach(row => {
            tbody.appendChild(row);
            const card = document.createElement('div');
            card.className = 'col-12 vaccine-card';
            card.dataset.age = row.dataset.age;
            card.dataset.disease = row.dataset.disease;
            card.innerHTML = `
              <p><strong>STT:</strong> ${row.cells[0].textContent}</p>
              <p><strong>Phòng bệnh:</strong> ${row.cells[1].textContent}</p>
              <p><strong>Tên vắc-xin:</strong> ${row.cells[2].textContent}</p>
              <p><strong>Nước sản xuất:</strong> ${row.cells[3].textContent}</p>
              <p><strong>Giá bán lẻ:</strong> ${row.cells[4].textContent} VNĐ</p>
              <p><strong>Giá ưu đãi:</strong> ${row.cells[5].textContent || '-'} VNĐ</p>
              <p><strong>Tình trạng:</strong> ${row.cells[6].textContent}</p>
              ${row.cells[7].innerHTML}
            `;
            cardsContainer.appendChild(card);
          });
        }
      }

      ageFilter.addEventListener('change', filterAndSortTable);
      diseaseFilter.addEventListener('change', filterAndSortTable);
      sortFilter.addEventListener('change', filterAndSortTable);
    });
  </script>