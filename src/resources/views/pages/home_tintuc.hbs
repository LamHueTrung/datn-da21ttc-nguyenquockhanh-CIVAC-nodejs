  <!-- Filter and Pagination Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const topicFilter = document.getElementById('topic-filter');
      const dateFilter = document.getElementById('date-filter');
      const newsCards = document.querySelectorAll('.news-card');
      const paginationLinks = document.querySelectorAll('.pagination .page-link');
      const itemsPerPage = 6;
      let currentPage = 1;

      function filterNews() {
        const topicValue = topicFilter.value;
        const dateValue = dateFilter.value;

        let filteredCards = Array.from(newsCards);
        if (topicValue !== 'all') {
          filteredCards = filteredCards.filter(card => card.dataset.topic === topicValue);
        }

        if (dateValue !== 'all') {
          filteredCards.sort((a, b) => {
            const dateA = new Date(a.dataset.date);
            const dateB = new Date(b.dataset.date);
            return dateValue === 'newest' ? dateB - dateA : dateA - dateB;
          });
        }

        updatePagination(filteredCards);
      }

      function updatePagination(filteredCards) {
        const totalPages = Math.ceil(filteredCards.length / itemsPerPage);
        const pagination = document.querySelector('.pagination');
        pagination.innerHTML = '';

        if (totalPages <= 1) return;

        // Previous button
        pagination.innerHTML += `
          <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
            <a class="page-link" href="#" data-page="prev">Trước</a>
          </li>
        `;

        // Page numbers
        for (let i = 1; i <= totalPages; i++) {
          pagination.innerHTML += `
            <li class="page-item ${currentPage === i ? 'active' : ''}">
              <a class="page-link" href="#" data-page="${i}">${i}</a>
            </li>
          `;
        }

        // Next button
        pagination.innerHTML += `
          <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
            <a class="page-link" href="#" data-page="next">Sau</a>
          </li>
        `;

        // Show/hide cards
        filteredCards.forEach((card, index) => {
          const pageIndex = Math.floor(index / itemsPerPage) + 1;
          card.style.display = pageIndex === currentPage ? 'block' : 'none';
        });

        // Update pagination event listeners
        document.querySelectorAll('.pagination .page-link').forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const page = e.target.dataset.page;
            if (page === 'prev' && currentPage > 1) currentPage--;
            else if (page === 'next' && currentPage < totalPages) currentPage++;
            else if (!isNaN(page)) currentPage = parseInt(page);
            updatePagination(filteredCards);
          });
        });
      }

      topicFilter.addEventListener('change', filterNews);
      dateFilter.addEventListener('change', filterNews);

      // Initial pagination
      filterNews();
    });
  </script>